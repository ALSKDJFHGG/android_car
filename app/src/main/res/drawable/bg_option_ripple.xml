        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/option_normal_bg"/>
            <stroke android:width="1.5dp" android:color="@color/option_border_normal"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</ripple>
